{
  "name": "mango",
  "description": "A theme based on Radix.",
  "browserSyncProxy" : "http://127.0.0.1",
  "bowerDir": "./bower_components",
  "css": {
    "file" : "mango.style.scss",
    "src": [
      "scss/**/*.scss"
    ],
    "dest": "assets/css",
    "includePaths": [
      "./bower_components/bootstrap-sass/assets/stylesheets",
      "./bower_components/font-awesome/scss",
      "./bower_components/compass-mixins/lib",
      "./bower_components/noto-sans-kr"
    ]
  },
  "js": {
    "file" : "mango.script.js",
    "src": [
      "assets/js/**/*.js"
    ],
    "dest": "assets/js"
  },
  "images": {
    "src": [
      "assets/images/**/*"
    ],
    "dest": "assets/images/"
  },
  "fonts": {
    "src": [
      "./bower_components/font-awesome/fonts/**.*",
      "./bower_components/noto-sans-kr/fonts/**.*"
    ],
    "dest": "./assets/fonts/"
  }
}
